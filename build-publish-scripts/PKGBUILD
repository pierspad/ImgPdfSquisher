# Maintainer: pierspad
pkgname=imgpdfsquisher
pkgver=1.0.0
pkgrel=1
pkgdesc="A Python GUI application for reducing the filesize of PDF with high resolution images"
arch=('any')
url="https://github.com/pierspad/imgpdfsquisher"
license=('MIT')

# Dipendenze runtime (nomi corretti per Arch)
depends=(
  'python'
  'poppler'
  'python-pillow'
  'python-reportlab'
  'python-charset-normalizer'
  'python-pdf2image'
  'pyside6'
)

makedepends=(
  'python-build'
  'python-installer'
  'python-wheel'
  'python-setuptools'
)

optdepends=(
  'python-pip: per installare dipendenze opzionali come nbformat per il supporto Jupyter'
)

source=("$pkgname-$pkgver.tar.gz::https://github.com/pierspad/imgpdfsquisher/archive/v$pkgver.tar.gz")
sha256sums=('df252a3c4870e1e68bdaa08c449c5ff63310c84fa2baacda6199ebb1f3427a61')

prepare() {
  cd "$srcdir/imgpdfsquisher-$pkgver"
}

build() {
  cd "$srcdir/imgpdfsquisher-$pkgver"
  unset VIRTUAL_ENV
  export PATH="/usr/bin:/bin:/usr/sbin:/sbin"
  /usr/bin/python -m build --wheel --no-isolation
}

check() {
  cd "$srcdir/imgpdfsquisher-$pkgver"
}

package() {
  cd "$srcdir/imgpdfsquisher-$pkgver"
  /usr/bin/python -m installer --destdir="$pkgdir" dist/*.whl

  install -Dm644 docs/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm644 packaging/imgpdfsquisher.desktop "$pkgdir/usr/share/applications/imgpdfsquisher.desktop"
  install -Dm644 imgpdfsquisher/assets/logo/logo.png "$pkgdir/usr/share/pixmaps/imgpdfsquisher.png"
}
